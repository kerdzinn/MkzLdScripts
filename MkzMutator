-- ========================================
-- CONFIGURA√á√ïES GLOBAIS
-- ========================================
local CONFIG = {
    LOADING_TIME = 10, -- Alterado para 100 segundos
    UI_SIZE = {320, 280}, -- Reduzido o tamanho
    ORB_SIZE = 60,
    COLORS = {
        PRIMARY = Color3.fromRGB(100, 150, 255),
