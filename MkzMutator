    }):Play()

    task.wait(1)

    -- Anima√ß√£o da barra de progresso
    TweenService:Create(fillBar, TweenInfo.new(CONFIG.LOADING_TIME, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
