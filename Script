        bullet.Text = "-"
        bullet.Font = Enum.Font.GothamBold
        bullet.TextSize = 14
        bullet.TextColor3 = Color3.fromRGB(100, 200, 100)
        bullet.BackgroundTransparency = 1
        bullet.Parent = frame
        
        local label = Instance.new("TextLabel")
        label.Size = UDim2.new(1, -12, 1, 0)
        label.Position = UDim2.new(0, 12, 0, 0)
        label.Text = text
        label.Font = isWarning and Enum.Font.GothamBold or Enum.Font.Gotham
        label.TextSize = 14
        label.TextColor3 = isWarning and Color3.fromRGB(255, 255, 100) or Color3.fromRGB(200, 200, 220)
        label.TextXAlignment = Enum.TextXAlignment.Left
        label.BackgroundTransparency = 1
        label.Parent = frame
        
        return frame
    end

    createFeature("Anti Detected")
    createFeature("Trade Failed Bypass")
    createFeature("Only Use When In Trade", true)

