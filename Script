-- Fundo com textura e gradiente preto e branco
local bgFrame = Instance.new("Frame")
bgFrame.Size = UDim2.new(1, 0, 1, 0)
bgFrame.Position = UDim2.new(0, 0, 0, 0)
bgFrame.BorderSizePixel = 0
bgFrame.BackgroundColor3 = Color3.fromRGB(255, 255, 255) -- Mantemos branco para o gradiente se destacar
bgFrame.ZIndex = 0
bgFrame.Parent = gui

-- Gradiente preto e branco sutil
local gradient = Instance.new("UIGradient")
gradient.Color = ColorSequence.new({
	ColorSequenceKeypoint.new(0, Color3.fromRGB(10, 10, 10)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(50, 50, 50))
})
gradient.Rotation = 45
gradient.Parent = bgFrame

-- Textura de contorno topográfico (como na imagem)
local textureOverlay = Instance.new("ImageLabel")
textureOverlay.Size = UDim2.new(1, 0, 1, 0)
textureOverlay.Position = UDim2.new(0, 0, 0, 0)
textureOverlay.BackgroundTransparency = 1
textureOverlay.ImageTransparency = 0.85 -- leve para parecer sutil
textureOverlay.ImageColor3 = Color3.fromRGB(255, 255, 255)
textureOverlay.Image = "rbxassetid://11394676928" -- textura de linhas topográficas
textureOverlay.ScaleType = Enum.ScaleType.Tile
textureOverlay.TileSize = UDim2.new(0.1, 0, 0.1, 0) -- controle de repetição
textureOverlay.ZIndex = 1
textureOverlay.Parent = bgFrame
