repeat task.wait() until game:IsLoaded()

-- Serviços
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")
local player = Players.LocalPlayer

-- GUI principal
local gui = Instance.new("ScreenGui")
gui.IgnoreGuiInset = true
gui.DisplayOrder = 1000
gui.ResetOnSpawn = false
gui.Name = "MkzLoadingScreen"
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
gui.Parent = CoreGui

-- Fundo com textura e gradiente preto e branco
local bgFrame = Instance.new("Frame")
bgFrame.Size = UDim2.new(1, 0, 1, 0)
bgFrame.Position = UDim2.new(0, 0, 0, 0)
bgFrame.BorderSizePixel = 0
bgFrame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
bgFrame.ZIndex = 0
bgFrame.Parent = gui

-- Gradiente preto e branco
local gradient = Instance.new("UIGradient")
gradient.Color = ColorSequence.new({
	ColorSequenceKeypoint.new(0, Color3.fromRGB(10, 10, 10)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(50, 50, 50))
})
gradient.Rotation = 45
gradient.Parent = bgFrame

-- Textura topográfica sutil
local textureOverlay = Instance.new("ImageLabel")
textureOverlay.Size = UDim2.new(1, 0, 1, 0)
textureOverlay.Position = UDim2.new(0, 0, 0, 0)
textureOverlay.BackgroundTransparency = 1
textureOverlay.ImageTransparency = 0.85
textureOverlay.ImageColor3 = Color3.fromRGB(255, 255, 255)
textureOverlay.Image = "rbxassetid://11394676928" -- topographic lines
textureOverlay.ScaleType = Enum.ScaleType.Tile
textureOverlay.TileSize = UDim2.new(0.1, 0, 0.1, 0)
textureOverlay.ZIndex = 1
textureOverlay.Parent = bgFrame

-- Frame principal
local frame = Instance.new("Frame")
frame.Size = UDim2.new(1, 0, 1, 0)
frame.BackgroundTransparency = 1
frame.ZIndex = 10
frame.Parent = gui

-- Título
local title = Instance.new("TextLabel")
title.Size = UDim2.new(0.6, 0, 0, 80)
title.Position = UDim2.new(0.5, 0, 0.3, 0)
title.AnchorPoint = Vector2.new(0.5, 0.5)
title.BackgroundTransparency = 1
title.Text = "Mkz Scripts"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextScaled = true
title.Font = Enum.Font.GothamBold
title.ZIndex = 11
title.Parent = frame

-- Mensagem inicial
local messageLabel = Instance.new("TextLabel")
messageLabel.Size = UDim2.new(0.5, 0, 0, 26)
messageLabel.Position = UDim2.new(0.5, 0, 0.5, 5)
messageLabel.AnchorPoint = Vector2.new(0.5, 1)
messageLabel.BackgroundTransparency = 1
messageLabel.TextColor3 = Color3.fromRGB(220, 220, 220)
messageLabel.TextScaled = true
messageLabel.Font = Enum.Font.GothamBold
messageLabel.Text = "The script is loading..."
messageLabel.ZIndex = 11
messageLabel.Parent = frame

local messages = {
	"The script is loading...",
	"Leaving now may delete your pets and get you banned!"
}
local msgIndex = 1

-- Barra de progresso
local progressBar = Instance.new("Frame")
progressBar.Size = UDim2.new(0.5, 0, 0, 24)
progressBar.Position = UDim2.new(0.5, 0, 0.5, 30)
progressBar.AnchorPoint = Vector2.new(0.5, 0)
progressBar.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
progressBar.BorderSizePixel = 0
progressBar.ZIndex = 11
progressBar.Parent = frame
Instance.new("UICorner", progressBar).CornerRadius = UDim.new(0, 12)

local fill = Instance.new("Frame")
fill.Size = UDim2.new(0, 0, 1, 0)
fill.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
fill.BorderSizePixel = 0
fill.ZIndex = 12
fill.Parent = progressBar
Instance.new("UICorner", fill).CornerRadius = UDim.new(0, 12)

local percentText = Instance.new("TextLabel")
percentText.Size = UDim2.new(0, 80, 0, 24)
percentText.Position = UDim2.new(0.5, 0, 0.5, 65)
percentText.AnchorPoint = Vector2.new(0.5, 0.5)
percentText.BackgroundTransparency = 1
percentText.Text = "0%"
percentText.TextColor3 = Color3.fromRGB(255, 255, 255)
percentText.TextScaled = true
percentText.Font = Enum.Font.GothamBold
percentText.ZIndex = 11
percentText.Parent = frame

-- Alternar mensagens com transição lateral
local function swapMessage(newMsg)
	local oldLabel = messageLabel
	local newLabel = oldLabel:Clone()
	newLabel.Text = newMsg
	newLabel.Position = UDim2.new(1.5, 0, oldLabel.Position.Y.Scale, oldLabel.Position.Y.Offset)
	newLabel.TextTransparency = 1
	newLabel.Parent = frame

	local tweenOut = TweenService:Create(oldLabel, TweenInfo.new(0.4), {
		Position = UDim2.new(-0.5, 0, oldLabel.Position.Y.Scale, oldLabel.Position.Y.Offset),
		TextTransparency = 1
	})
	local tweenIn = TweenService:Create(newLabel, TweenInfo.new(0.4), {
		Position = UDim2.new(0.5, 0, oldLabel.Position.Y.Scale, oldLabel.Position.Y.Offset),
		TextTransparency = 0
	})

	tweenOut:Play()
	tweenIn:Play()

	tweenOut.Completed:Connect(function()
		oldLabel:Destroy()
		messageLabel = newLabel
	end)
end

-- Animação de carregamento
task.spawn(function()
	local duration = 110
	local steps = 330
	local waitTime = duration / steps
	local lastMessageSwap = 0

	for i = 1, steps do
		local percent = i / steps
		fill.Size = UDim2.new(percent, 0, 1, 0)
		percentText.Text = tostring(math.floor(percent * 100)) .. "%"

		if math.floor(percent * 100) >= lastMessageSwap + 10 then
			msgIndex = msgIndex % #messages + 1
			swapMessage(messages[msgIndex])
			lastMessageSwap = math.floor(percent * 100)
		end

		task.wait(waitTime)
	end

	-- Fade de tudo (incluindo textura, barra e textos)
	for _, obj in pairs(gui:GetDescendants()) do
		if obj:IsA("TextLabel") or obj:IsA("Frame") or obj:IsA("ImageLabel") then
			pcall(function()
				TweenService:Create(obj, TweenInfo.new(1), {
					TextTransparency = 1,
					BackgroundTransparency = 1,
					ImageTransparency = 1
				}):Play()
			end)
		end
	end

	task.wait(1.5)
	gui:Destroy()
end)
